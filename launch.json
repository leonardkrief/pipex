	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Lancer",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/a.out",
			"args": ["tests/infile1", "cat", "tests/outfile1"],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb"
		},
		{
			"name": "(gdb) Joindre",
			"type": "cppdbg",
			"request": "attach",
			"program": "${workspaceFolder}/a.out",
			"processId": "${command:pickProcess}",
			"MIMode": "gdb",
			"targetArchitecture": "x86_64"
		}

	]
}